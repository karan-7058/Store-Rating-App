
<% title = "Update Password" %>

<h2 class="mb-4">Update Password</h2>

<% if (message) { %>
  <div class="alert alert-info"><%= message %></div>
<% } %>

<form method="POST" action="/update-password" class="card p-4 shadow-sm" style="max-width: 600px;">
  <div class="mb-3">
    <label>Current Password</label>
    <input name="currentPassword" type="password" class="form-control" placeholder="Current password" required />
  </div>
  <div class="mb-3">
    <label>New Password</label>
    <input name="newPassword" type="password" class="form-control" placeholder="New password" required />
  </div>
  <button class="btn btn-warning">Update Password</button>
</form>

