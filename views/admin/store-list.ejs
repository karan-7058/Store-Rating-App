<% title = "Store List" %>

<h2 class="mb-3">Store List</h2>

<form method="GET" action="/admin/stores" class="row g-3 mb-4">
  <div class="col-md-3">
    <input name="name" placeholder="Name" value="<%= filters.name || '' %>" class="form-control" />
  </div>
  <div class="col-md-3">
    <input name="email" placeholder="Email" value="<%= filters.email || '' %>" class="form-control" />
  </div>
  <div class="col-md-3">
    <input name="address" placeholder="Address" value="<%= filters.address || '' %>" class="form-control" />
  </div>
  <div class="col-md-3">
    <button class="btn btn-outline-primary w-100">Filter</button>
  </div>
</form>

<table class="table table-bordered table-striped">
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% stores.forEach(store => { %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.email %></td>
        <td><%= store.address %></td>
        <td><%= store.avgRating %></td>
      </tr>
    <% }) %>
  </tbody>
</table>

