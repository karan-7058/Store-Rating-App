
<% title = "Add Store" %>

<h2 class="mb-4">Add New Store</h2>

<form method="POST" action="/admin/add-store" class="card p-4 shadow-sm" style="max-width: 600px;">
  <div class="mb-3">
    <label>Store Name</label>
    <input name="name" class="form-control" required />
  </div>
  <div class="mb-3">
    <label>Store Email</label>
    <input name="email" class="form-control" required />
  </div>
  <div class="mb-3">
    <label>Address</label>
    <textarea name="address" class="form-control" required></textarea>
  </div>
  <div class="mb-3">
    <label>Store Owner</label>
    <select name="owner" class="form-select" required>
      <% owners.forEach(owner => { %>
        <option value="<%= owner._id %>">
          <%= owner.name %> (<%= owner.email %>)
        </option>
      <% }) %>
    </select>
  </div>
  <button class="btn btn-primary">Add Store</button>
</form>

